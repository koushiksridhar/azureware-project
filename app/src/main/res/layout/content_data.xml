<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbckg2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.theparkcorp.azureware3.DataActivity"
    tools:showIn="@layout/activity_data">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acclereometer Data"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/redTri3"
        android:id="@+id/AccelTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mAccelDataX"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:id="@+id/mAccelDataY"
        android:layout_alignTop="@+id/mAccelDataX" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginRight="190dp"
        android:id="@+id/mAccelDataX"
        android:textSize="25sp"
        android:layout_below="@+id/AccelTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/mAccelDataZ"
        android:layout_alignBaseline="@+id/mAccelDataY"
        android:layout_alignBottom="@+id/mAccelDataY"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Press the Scan Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="137dp"
        android:id="@+id/ScanButtonText"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
