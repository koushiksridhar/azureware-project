<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/newbckg2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.theparkcorp.azureware3.Main2"
        tools:showIn="@layout/activity_main2">


    <Button
            android:text="Take Symptom Rating Test"
            android:id="@+id/startTestButton"
            android:background="@drawable/rounded_button"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
        android:layout_below="@+id/button"
        android:onClick="logicToSymptoms"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="AzureWare"
        android:layout_width="200sp"
        android:textSize="40sp"
        android:textColor="@color/redTri3"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_height="50sp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:text="Start Tremor Test"
        android:id="@+id/button"
        android:background="@drawable/rounded_button"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="text_msg"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200sp"
        app:srcCompat="@drawable/logo1"
        android:id="@+id/imageView"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="DISCLAIMER: This product does not replace a doctor. Please seek your doctor for all final results."
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>


