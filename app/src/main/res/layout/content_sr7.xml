<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sr1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbckg2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.theparkcorp.azureware3.SR7"
    tools:showIn="@layout/activity_sr7">

    <Button
        android:text="1, Slight Issues"
        android:layout_width="150sp"
        android:layout_height="70sp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded1"
        android:id="@+id/button11"
        android:textSize="20sp"
        android:onClick="sleep1"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="4, Severe Issues"
        android:layout_width="150sp"
        android:layout_height="70sp"
        android:textSize="20sp"
        android:background="@drawable/rounded4"
        android:layout_marginTop="12dp"
        android:id="@+id/button14"
        android:onClick="sleep4"
        android:layout_below="@+id/button13"
        android:layout_alignEnd="@+id/button11" />

    <Button
        android:text="3, Moderate Issues"
        android:layout_width="150sp"
        android:layout_height="70sp"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="18dp"
        android:onClick="sleep3"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"
        android:layout_alignStart="@+id/button11" />

    <Button
        android:text="2, Mild Issues"
        android:layout_width="150sp"
        android:layout_height="70sp"
        android:textSize="20sp"
        android:background="@drawable/rounded2"
        android:id="@+id/button12"
        android:onClick="sleep2"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/button11"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="0, No Issues"
        android:layout_width="150sp"
        android:layout_height="70sp"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded0"
        android:id="@+id/button10"
        android:onClick="sleep0"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/button11" />

    <TextView
        android:text="Is sleep is an issue?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/redTri3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
